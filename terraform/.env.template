# Terraform Configuration Template
# Copy this file and update the values for your specific setup

# AWS Configuration
AWS_REGION="ap-south-1"
AWS_ACCOUNT_ID="123456789012"

# S3 Backend Configuration
TERRAFORM_STATE_BUCKET="your-terraform-state-bucket"
TERRAFORM_STATE_REGION="ap-south-1"
TERRAFORM_DYNAMODB_TABLE = "terraform-state-locks"

# Domain Configuration (Optional)
DOMAIN_NAME="yourdomain.com"
CERTIFICATE_ARN="arn:aws:acm:ap-south-1:123456789012:certificate/your-cert-id"

# ECR Repository URLs (Update after creating ECR repos)
FRONTEND_IMAGE_DEV="123456789012.dkr.ecr.ap-south-1.amazonaws.com/todo-app-frontend:dev"
BACKEND_IMAGE_DEV="123456789012.dkr.ecr.ap-south-1.amazonaws.com/todo-app-backend:dev"

FRONTEND_IMAGE_UAT="123456789012.dkr.ecr.ap-south-1.amazonaws.com/todo-app-frontend:uat"
BACKEND_IMAGE_UAT="123456789012.dkr.ecr.ap-south-1.amazonaws.com/todo-app-backend:uat"

FRONTEND_IMAGE_PROD="123456789012.dkr.ecr.ap-south-1.amazonaws.com/todo-app-frontend:prod"
BACKEND_IMAGE_PROD="123456789012.dkr.ecr.ap-south-1.amazonaws.com/todo-app-backend:prod"

# GitHub Actions Configuration
# Create IAM role with OIDC for GitHub Actions
GITHUB_ACTIONS_ROLE_ARN="arn:aws:iam::123456789012:role/github-actions-role"

# Resource Sizing (adjust based on your needs)
# Dev Environment
DEV_FRONTEND_CPU=256
DEV_FRONTEND_MEMORY=512
DEV_BACKEND_CPU=256
DEV_BACKEND_MEMORY=512
DEV_DB_INSTANCE_CLASS="db.t3.micro"

# UAT Environment
UAT_FRONTEND_CPU=256
UAT_FRONTEND_MEMORY=512
UAT_BACKEND_CPU=512
UAT_BACKEND_MEMORY=1024
UAT_DB_INSTANCE_CLASS="db.t3.small"

# Production Environment
PROD_FRONTEND_CPU=512
PROD_FRONTEND_MEMORY=1024
PROD_BACKEND_CPU=1024
PROD_BACKEND_MEMORY=2048
PROD_DB_INSTANCE_CLASS="db.t3.medium"
